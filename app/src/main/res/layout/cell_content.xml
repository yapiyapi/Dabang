<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:layout_marginBottom="10dp"
    android:id="@+id/cell_linear"
    android:orientation="horizontal"
    android:background="?attr/selectableItemBackground">


    <ImageView
        android:id="@+id/cell_imageview"
        android:layout_width="130dp"
        android:layout_height="130dp"
        app:srcCompat="@drawable/dabang" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="130dp"
        android:paddingStart="30dp"
        android:gravity="center_vertical"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/title_cell"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="제목"
            android:layout_marginBottom="12dp"
            android:maxLines="1"
            android:ellipsize ="end"
            android:textSize="20sp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/location_cell"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="해운대구 반여동"
            android:maxLines="1"
            android:ellipsize ="end"
            android:textStyle="bold"
            android:textSize="15sp" />
        <TextView
            android:id="@+id/apart_cell"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="센텀 롯데 캐슬 아파트"
            android:maxLines="1"
            android:ellipsize ="end"
            android:textSize="13sp" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp">

            <TextView
                android:id="@+id/sale_status_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:background="@drawable/round_txt"
                android:padding="5dp"
                android:text="거래완료"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:textStyle="bold"
                android:visibility="gone" />
            <TextView
                android:id="@+id/price_cell"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="가격"
                android:maxLines="1"
                android:ellipsize ="end"
                android:textSize="18sp"
                android:textColor="@color/가격"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="130dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/favorite_empty"
            android:layout_width="35dp"
            android:layout_height="35dp"
            app:srcCompat="@drawable/favorite_empty" />
        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="2" />

        <ImageView
            android:id="@+id/sub_menu"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="center_horizontal"
            android:visibility="invisible"
            app:srcCompat="@drawable/sub_menu" />
    </LinearLayout>

</LinearLayout>